{
  "server": {
    "directory": "dist/"
  },
  "tasks": {
    "html": {
      "src": [
        "src/*.html"
      ],
      "dest": "dist/"
    },
    "script": {
      "src": [
        "src/js/libs/*.js",
        "src/js/main.js",
        "src/js/app/*.js"
      ],
      "dest": "dist/js/"
    },
    "style": {
      "src": [
        "src/scss/*.scss"
      ],
      "dest": "dist/css/"
    },
    "image": {
      "src": [
        "src/img/**/*"
      ],
      "dest": "dist/img/"
    },
    "media": {
      "src": [
        "src/media/**/*"
      ],
      "dest": "dist/media/"
    },
    "fonts": {
      "src": [
        "src/fonts/*"
      ],
      "dest": "dist/fonts/"
    }
  }
}