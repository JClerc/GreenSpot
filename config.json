{
  "server": {
    "directory": "dist/"
  },
  "tasks": {
    "html": {
      "src": [
        "src/*.html"
      ],
      "dest": "dist/"
    },
    "script": {
      "src": [
        "node_modules/zepto/src/zepto.js",
        "node_modules/zepto/src/detect.js",
        "node_modules/zepto/src/event.js",
        "node_modules/zepto/src/gesture.js",
        "node_modules/zepto/src/ie.js",
        "node_modules/zepto/src/touch.js",
        "node_modules/grapnel/src/grapnel.js",
        "src/js/main.js",
        "src/js/app/*.js"
      ],
      "dest": "dist/js/"
    },
    "style": {
      "src": [
        "src/scss/**/*.scss"
      ],
      "dest": "dist/css/"
    },
    "image": {
      "src": [
        "src/img/**/*"
      ],
      "dest": "dist/img/"
    },
    "media": {
      "src": [
        "src/media/**/*"
      ],
      "dest": "dist/media/"
    },
    "fonts": {
      "src": [
        "src/fonts/**/*"
      ],
      "dest": "dist/fonts/"
    }
  }
}